

<%= simple_form_for :session, url: sessions_path, html: { :class => "form-horizontal" } do |f| %>
  <fieldset>
    <legend>Log in to Access the Website </legend>
    <%= f.input :email, :wrapper => :prepend do %>
      <span class="add-on"><i class="icon-envelope"></i></span><%= f.text_field :email %>
    <% end %>
    <%= f.input :password, :wrapper => :prepend do %>
      <span class="add-on"><i class="icon-key"></i></span><%= f.password_field :password %>
    <% end %>
    <%= f.input :remember_me, as: :boolean, label: false, inline_label: 'Yes, Remember me' %>

    <div class="form-actions">
      <%= f.submit "Log In", class: 'btn btn-primary'  %>
    </div>
  </fieldset>
<% end %>


