
<h3>Assignments Issued so Far</h3>

<table class="table table-striped table-hover">
  <thead>
    <th>Category</th>
    <th>Level</th>
    <th>Difficulty</th>
    <th>Title</th>
    <th>Description</th>
    <th>Challenged</th>
  </thead>
  <tbody>
    <% @assignments.each do |asg| %>
      <tr>
        <td><%= asg.category.name %></td>
        <td><%= asg.level %></td>
        <td><%= asg.difficulty %></td>
        <td><%= link_to asg.title, assignment_path(asg) %></td>
        <td><%= asg.tagline %></td>
        <td>
          <% if current_user.submissions.where(:assignment_id => asg.id).any? %>
            <span class="label label-success">Already Taken</span>
          <% else %>
            <span class="label label">Not Taken</span>
          <% end %>
        </td>
    <% end %>
  </tbody>
</table>






