

<div class="main">
  <div class="well">
    <%= simple_form_for @profile, html: { class: "form-horizontal" } do |f| %>
      <table>
        <tbody>
          <fieldset>
            <legend>Edit Profile </legend>
            <tr>
              <td rowspan="2" width="30%">
                <div id="avatar-box" style="margin-left: 5px;">
                  <a href="<%= @profile.avatar.url %>">
                    <img src="<%= @profile.avatar.url(:thumb) %>" alt="<%= @profile.avatar.identifier %>" />
                  </a>
                </div>
              </td>
              <td width="70%" style="text-align:right">
                <%= render "uploader", f: f %>
              </td>
            </tr>
            <tr>
              <td>
                <br />
                <br />
              </td>
            </tr>
            <tr>
              <td>
              </td>
              <td>
                <%= f.input :tagline, input_html: { class: "input-xlarge" } %>
                <%= f.input :bio, input_html: { rows: 10, cols: 60 } %>
                <%= f.input :interests, input_html: { rows: 10, cols: 60 }  %>
                <div class="control-group">
                  <div class="controls">
                    <%= f.submit "Edit Profile", class: "btn btn-primary" %>
                  </div>
                </div>
              </fieldset>
            </td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>









